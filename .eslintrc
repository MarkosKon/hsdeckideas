{
  "parser": "babel-eslint",
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.7"
    }
  },
  "extends": ["airbnb", "plugin:jest/recommended", "plugin:mdx/recommended"],
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": ["jest", "react-hooks"],
  "rules": {
    "react-hooks/rules-of-hooks": "error"
  }
}
